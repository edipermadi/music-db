          {
            "name": "ring_number",
            "description": "Ian Ring's key number",
            "in": "query",
            "required": false,
            "type": "integer",
            "minimum": 1
          },
          {
            "name": "perfection",
            "description": "Count of perfect notes in the key",
            "in": "query",
            "required": false,
            "type": "integer",
            "minimum": 0
          },
          {
            "name": "imperfection",

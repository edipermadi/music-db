          {
            "name": "rotational_symmetric",
            "description": "Whether scale is rotational symmetric",
            "in": "query",
            "required": false,
            "type": "boolean"
          },
          {
            "name": "rotational_symmetry_level",
            "description": "Scale rotational symmetry level",
            "in": "query",
            "required": false,
            "type": "integer",
            "minimum": 1
          },
          {
            "name": "palindromic",
            "description": "Whether scale is palindromic",
            "in": "query",
            "required": false,
            "type": "boolean"
          },
          {
            "name": "cardinality",
            "description": "Scale cardinality, count of pitches in the chord",
            "in": "query",
            "required": false,
            "type": "integer",
            "minimum": 1
          },
          {
            "name": "page",
            "description": "Page Number",
            "in": "query",
            "required": false,
            "type": "integer",
            "minimum": 1
          },
          {
            "name": "per_page",
            "description": "Page Size",
            "in": "query",
            "required": false,
            "type": "integer",
            "minimum": 1,
            "maximum": 100
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/ListPitchScalesResponse"
            }
          }
        }
      }
    },
    "/pitches/{pitch_id}/keys": {
      "get": {
        "operationId": "ListPitchKeys",
        "tags": [

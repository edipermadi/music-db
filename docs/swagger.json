            "in": "path",
            "required": true,
            "type": "integer",
            "minimum": 1,
            "maximum": 12
          },
          {
            "name": "tonic_id",
            "description": "Scale tonic pitch identifier",
            "in": "query",
            "required": false,
            "type": "integer",
            "minimum": 1,
            "maximum": 12
          },
          {
            "name": "zeitler_number",
            "description": "William Zeitler's scale number",
            "in": "query",
            "required": false,
            "type": "integer",
            "minimum": 1
          },
          {
            "name": "ring_number",
            "description": "Ian Ring's scale number",
            "in": "query",
            "required": false,
            "type": "integer",
            "minimum": 1
          },
          {
            "name": "perfection",
            "description": "Count of perfect notes",
            "in": "query",
            "required": false,
            "type": "integer",
            "minimum": 0

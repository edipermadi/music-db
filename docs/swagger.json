            "required": false,
            "type": "integer",
            "minimum": 1
          },
          {
            "name": "page",
            "description": "Page Number",
            "in": "query",
            "required": false,
            "type": "integer",
            "minimum": 1
          },
          {
            "name": "per_page",
            "description": "Page Size",
            "in": "query",
            "required": false,
            "type": "integer",
            "minimum": 1,
            "maximum": 100
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/ListPitchKeysResponse"
            }
          }
        }
      }
    }

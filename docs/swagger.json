  "paths": {
    "/pitches": {
      "get": {
        "operationId": "ListPitches",
        "tags": [
          "pitch"
        ],
        "summary": "List pitches",
        "description": "List simplified pitches",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/ListPitchesResponse"
            }
          }
        }
      }
    },
    "/pitches/{pitch_id}": {
      "get": {
        "operationId": "GetPitch",
        "tags": [
          "pitch"
        ],
        "summary": "Get pitch",
        "description": "Get detailed pitch information",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "pitch_id",
            "description": "Pitch identifier",
            "in": "path",
            "required": true,
            "type": "integer",
            "minimum": 1,
            "maximum": 12
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/GetPitchResponse"
            }
          }
        }
      }
    },
    "/pitches/{pitch_id}/chords": {
      "get": {
        "operationId": "ListPitchChords",
        "tags": [
          "pitch",
          "chord"
        ],
        "summary": "List pitch chords",
        "description": "List chords related to the given pitch",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "pitch_id",
            "description": "Pitch identifier",
            "in": "path",
            "required": true,
            "type": "integer",
            "minimum": 1,
            "maximum": 12
          },
          {
            "name": "chord_quality_id",
            "description": "Chord quality identifier",
            "in": "query",
            "required": false,
            "type": "integer",
            "minimum": 1
          },
          {
            "name": "root_id",
            "description": "Chord root pitch identifier",
            "in": "query",
            "required": false,
            "type": "integer",
            "minimum": 1,
            "maximum": 12
          },
          {
            "name": "zeitler_number",
            "description": "William Zeitler's chord number",
            "in": "query",
            "required": false,
            "type": "integer",
            "minimum": 1
          },
          {
            "name": "ring_number",
            "description": "Ian Ring's chord number",
            "in": "query",
            "required": false,
            "type": "integer",
            "minimum": 1
          },
          {
            "name": "cardinality",
            "description": "Chord cardinality, count of pitches in the chord",
            "in": "query",
            "required": false,
            "type": "integer",
            "minimum": 1
          },
          {
            "name": "page",
            "description": "Page Number",
            "in": "query",
            "required": false,
            "type": "integer",
            "minimum": 1
          },
          {
            "name": "per_page",
            "description": "Page Size",
            "in": "query",
            "required": false,
            "type": "integer",
            "minimum": 1,
            "maximum": 100
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/ListPitchChordsResponse"
            }
          }
        }
      }
    },
    "/pitches/{pitch_id}/scales": {
      "get": {
        "operationId": "ListPitchScales",
        "tags": [
          "pitch",
          "scale"
        ],
        "summary": "List pitch scales",
